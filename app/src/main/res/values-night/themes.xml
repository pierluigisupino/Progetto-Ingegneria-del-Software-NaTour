<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NaTour" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/black</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="NoActionBar" parent="Theme.NaTour">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="Theme.NaTour">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="titleTextColor">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">@font/euclid_circular_bold</item>
    </style>

    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>